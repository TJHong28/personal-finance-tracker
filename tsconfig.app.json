{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    
    /* Required for Vite & modern JS (Task 1: Scalability) */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    
    /* Robustness: Strict Type Checking (Task 2: Coding Standards) */
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,

    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
